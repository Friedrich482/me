---
import Layout from "@/layouts/main.astro";
import { PROJECTS } from "@/constants";
import ProjectCard from "@/components/Project";
---

<Layout title="Portfolio | Friedrich WT">
  <main class="flex flex-1 items-start justify-center py-2">
    <section
      class="flex w-1/2 flex-col items-start justify-center gap-8 pt-8 max-xl:w-2/3 max-sm:w-[90%]"
    >
      <h1 class="w-full text-start text-4xl font-extrabold">Projects</h1>
      <div class="flex flex-col gap-5">
        {
          PROJECTS.map((project) => (
            <ProjectCard project={project} client:load />
          ))
        }
      </div>
    </section>
  </main>
</Layout>
