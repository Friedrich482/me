---
import Layout from "@/layouts/main.astro";
import { CircleSmall } from "lucide-react";
import trpc from "@/trpc/client";

const posts = await trpc.posts.findAllPublished.query();
---

<Layout title="Admin Blog | Friedrich WT">
  <main class="flex flex-1 items-start justify-center py-2">
    <section
      class="flex w-3/6 flex-col items-center justify-center gap-16 pt-8 max-md:w-5/6"
    >
      <h1 class="w-full text-start text-4xl font-extrabold">Posts</h1>
      <ul class="text-foreground/60 w-full space-y-8 text-[18px]">
        {
          posts.length === 0 ? (
            <p class="text-center">No posts yet</p>
          ) : (
            posts.map((post) => (
              <li class="hover:text-primary/75 w-full cursor-pointer text-start">
                <a class="flex gap-2" href={`/blog/${post.slug}`}>
                  <CircleSmall />
                  <span>{post.title}</span>
                </a>
              </li>
            ))
          )
        }
      </ul>
    </section>
  </main>
</Layout>
