{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "check-types": {
      "dependsOn": ["^check-types"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "health-check": {
      "cache": false,
      "outputs": []
    },
    "@repo/trpc#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["api#health-check"]
    },
    "web#dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["api#health-check"]
    }
  }
}
