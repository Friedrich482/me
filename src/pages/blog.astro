---
import Layout from "@/layouts/main.astro";
import { CircleSmall } from "lucide-react";
import type { Post } from "@/types-schemas";

const res = await fetch("https://dummyjson.com/posts");
const posts: Post[] = (await res.json()).posts;
---

<Layout>
  <main class="flex flex-1 items-center justify-center py-2">
    <section
      class="flex w-3/6 flex-col items-center justify-center gap-16 pt-8 max-md:w-5/6"
    >
      <h1 class="w-full text-start text-4xl">Posts</h1>
      <ul class="text-foreground/60 w-full space-y-8 text-[18px]">
        {
          posts.length === 0 ? (
            <p>No posts yet</p>
          ) : (
            posts.map((post) => (
              <li class="hover:text-primary/75 w-full cursor-pointer text-start">
                <a class="flex gap-2" href={`/blog/${post.id}`}>
                  <CircleSmall />
                  <span>{post.title}</span>
                </a>
              </li>
            ))
          )
        }
      </ul>
    </section>
  </main>
</Layout>
